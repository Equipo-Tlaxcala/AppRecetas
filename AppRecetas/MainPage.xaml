<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRecetas.MainPage"
             BackgroundColor="#FAFAF6">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="30">

            <!-- Bienvenida principal -->
            <VerticalStackLayout Spacing="5">
                <Label Text="¡Bienvenido a Recetas TrucoTeca!"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#2E8B57"
                       HorizontalTextAlignment="Center" />

                <Label Text="Descubre platillos deliciosos, fáciles y llenos de sabor."
                       FontSize="16"
                       TextColor="#666"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Imagen representativa -->
            <Frame CornerRadius="20"
                   HasShadow="True"
                   IsClippedToBounds="True"
                   Padding="0"
                   HeightRequest="200">
                <Image Source="https://st5.depositphotos.com/1000589/62506/i/1600/depositphotos_625069898-stock-photo-meat-dishes-plates-various-meat.jpg"
                       Aspect="AspectFill" />
            </Frame>

            <!-- Categorías estáticas visuales -->
            <Label Text="Explora por tipo de receta 🍽️"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalTextAlignment="Center" />

            <Grid ColumnDefinitions="*,*,*" RowSpacing="15" ColumnSpacing="15" Padding="10">

                <!-- Categoría 1 -->
                <Frame BackgroundColor="#DFF5EC"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="15"
                       Grid.Column="0">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="🍲" FontSize="32" HorizontalTextAlignment="Center" />
                        <Label Text="Guisos" FontSize="14" TextColor="#333" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Categoría 2 -->
                <Frame BackgroundColor="#FFF3E0"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="15"
                       Grid.Column="1">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="🍰" FontSize="32" HorizontalTextAlignment="Center" />
                        <Label Text="Postres" FontSize="14" TextColor="#333" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Categoría 3 -->
                <Frame BackgroundColor="#E3F2FD"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="15"
                       Grid.Column="2">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="⏱️" FontSize="32" HorizontalTextAlignment="Center" />
                        <Label Text="Rápidas" FontSize="14" TextColor="#333" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
